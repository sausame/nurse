<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_status_layout"
    android:layout_width="@dimen/listbar_layout_1_status_width"
    android:layout_height="@dimen/listbar_layout_height">
    
    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/listbar_layout_1_item_width"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:text="Name"
        android:textColor="@color/list_main"
        android:textSize="@dimen/list_main_textsize"
        android:visibility="visible" />
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/name"
        android:background="@drawable/status_bar_background"
        android:src="@drawable/status_bar_background" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:singleLine="true"
        android:layout_toRightOf="@+id/image" />
    
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2013-10-25"
        android:textColor="@color/list_secondray"
        android:textSize="@dimen/list_secondray_textsize" />

</RelativeLayout>
